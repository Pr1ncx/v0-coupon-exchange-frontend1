# Environment
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# Database
MONGO_URI=mongodb://localhost:27017/coupon-saas
DB_MAX_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id

# Rate Limiting
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW=15

# Gamification Settings
POINTS_UPLOAD=5
POINTS_CLAIM=10
POINTS_BOOST=20
DAILY_CLAIMS_LIMIT=3
STARTING_POINTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp,gif

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_MONITORING=true

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# External Services
EMAIL_SERVICE_API_KEY=your_email_service_key
NOTIFICATION_SERVICE_URL=your_notification_service_url

# Monitoring & Alerts
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ALERT_EMAIL=admin@yourapp.com
ENABLE_PERFORMANCE_MONITORING=true

# Business Configuration
PREMIUM_SUBSCRIPTION_PRICE=9.99
CURRENCY=usd
FREE_USER_CLAIMS_LIMIT=3
BOOST_VISIBILITY_HOURS=24