{
  "name": "coupon-exchange-saas",
  "version": "1.0.0",
  "description": "A production-ready, gamified coupon exchange platform built with Node.js, Express, and MongoDB",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
    "test:watch": "jest --watch --forceExit --detectOpenHandles",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "coupon",
    "saas",
    "gamification",
    "freemium",
    "stripe",
    "express",
    "mongodb"
  ],
  "author": "Coupon Exchange Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "express-slow-down": "^1.6.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "stripe": "^12.14.0",
    "multer": "^1.4.5",
    "sharp": "^0.32.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-async-errors": "^3.1.1",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "cron": "^2.4.0",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.14.0",
    "eslint": "^8.45.0",
    "eslint-config-node": "^4.1.0",
    "faker": "^5.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}